{
  "name": "bot-discord",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "deploy-commands": "bun src/deploy-commands.ts",
    "deploy:dev": "cross-env DEPLOY_TARGET=test bun src/deploy-commands.ts",
    "deploy:prod": "cross-env DEPLOY_TARGET=prod bun src/deploy-commands.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "commands:list": "bun src/list-commands.ts"
  },
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@types/nodemailer": "^7.0.5",
    "discord.js": "^14.25.1",
    "dotenv": "^16.1.4",
    "nodemailer": "^7.0.12",
    "@aws-sdk/client-s3": "^3.679.0"
  },
  "devDependencies": {
    "typescript": "^5.5.2",
    "eslint": "^8.47.0",
    "@typescript-eslint/parser": "^6.7.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "prettier": "^3.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "cross-env": "^7.0.3",
    "@types/node": "^20.6.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}